progress#loading(value='0' max='400')
#alertBanner iOS users, ensure that your ringer is not muted
p#loadingLabel 0%
#topBar
  #folderSelectGroup
    img#folderSelectIcon(src='img/folder.svg' alt='Folder Select')
    p#folderSelectLabel Select stems
  #colorIcons
    input#color4Input.colorInput(type='color' value='#4349e3')
    #color4Icon.colorIcon
    input#color1Input.colorInput(type='color' value='#f5440a')
    #color1Icon.colorIcon
#content
  #playerContainer
    #player
      #upperPlayer.playerSection
        #topSlider.slider
          each i in [1,2,3,4]
            div(id='top_' + i, class='light' + i).light.topLight
      #middlePlayer.playerSection
        #leftSlider.slider
          each i in [1,2,3,4]
            div(id='left_' + i, class='light' + i).light.leftLight
        #centerButton
        #rightSlider.slider
          each i in [1,2,3,4]
            div(id='right_' + i, class='light' + i).light.rightLight
      #lowerPlayer.playerSection
        #bottomSlider.slider
          each i in [1,2,3,4]
            div(id='bottom_' + i, class='light' + i).light.bottomLight
    #playerButtons
      #menuButton.playerButton
      #volumeButtons.playerButton
        #plusButton.halfButton
          #plusIconVertical
          #plusIconHorizontal
        #minusButton.halfButton
          #minusIcon
      #selectButtons.playerButton
        #leftDotButton.halfButton
          #leftDotIcon.dotIcon
        #rightDotButton.halfButton
          #rightDotIcon.dotIcon
#externalLinks
  a(href='https://github.com/lukew3/stemPlayerOnline')
    img(src='img/githubIcon.svg' alt='Github')
  a(href='https://discord.gg/jfnFhggJGZ')
    img(src='img/discordIcon.svg' alt='Discord')
div(style='position: absolute; bottom: 20px; right: 20px;')
  a(href='https://stemplayeronline.com') Go to classic version
#selectStems
  #selectStemsInner
    p#selectStemsHeader STEM PLAYER ONLINE
    h2#selectStemsTitle SELECT STEMS
    div
      #selectStemsFromSPO.selectStemsSource
        #selectStemsSPOHeader.selectStemsSourceHeader
          img#selectStemsSPOArrow.stemsSourceArrow(src='/img/collapseArrow.svg')
          p FROM STEMPLAYERONLINE.COM
        #selectStemsSPO.selectStemsCollapsible
      #selectStemsFromLocal.selectStemsSource
        #selectStemsLocalHeader.selectStemsSourceHeader
          img#selectStemsLocalArrow.stemsSourceArrow.collapsed(src='/img/collapseArrow.svg')
          p FROM LOCAL FILES
        #selectStemsLocal.selectStemsCollapsible.collapsed
          input#folderSelectField(type='file' webkitdirectory='' multiple='')
          button#folderSelectButton Select Folder
          p#folderSelectSubtext * Folder selection on desktop only
          p#trackSelectSubtext Tracks
          each i in [1,2,3,4]
            .singleStemFileSelectGroup
              label #{i})
              div(id='stemFileSelectBtn' + i).stemFileSelectButton tap to select...
              input(id='stemFileSelect' + i, type='file').stemFileSelect
          #stemSelectLocalLayout
            label 2
            div
              label 3
              label 1
            label 4
    #selectStemsPlayButtons
      p#selectStemsResumeCurrent Resume current
      button#selectStemsLaunch LAUNCH
script.
  const $ = (id) => { return document.getElementById(id) };
script(src='js/Lights.js')
script(src='js/data.js')
script(src='https://unpkg.com/web-audio-daw')
script(src='js/Audio.js')
script(src='js/Loop.js')
script(src='js/app.js')
script(src='js/interface.js')
script(src='js/keyboardControls.js')
